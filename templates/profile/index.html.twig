{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <h1 class="text-center">Profil de l'utilisateur : {{app.user.username}}</h1>
    <div class="container mt-5 d-flex flex-column">
        <h5 class="text-center">Liste des annonces Favoris</h5>
        <ul class="list-group">
        {% for annonce in annoncesFiltered %}
            <a href="{{path('app_annonce_show', {'id' : annonce.annonces.id})}}"><li class="list-group-item">{{annonce.annonces.title}}</li></a>
        {% endfor %}
        </ul>
    </div>
    <div class="container mt-5 d-flex flex-column">
