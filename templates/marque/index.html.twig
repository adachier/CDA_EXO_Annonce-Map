{% extends 'base.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="text-center mt-4">Liste des marques</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for marque in marques %}
                <tr>
                    <td>{{ marque.id }}</td>
                    <td>{{ marque.name }}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('app_marque_edit', {'id': marque.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('app_marque_new') }}">Ajouter une marque</a>
    </div>
{% endblock %}
